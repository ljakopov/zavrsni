<h1>Login</h1>
<%= form_tag(:action=> 'attempt_login', :html => {:class => "form-signin"} ) do %>
    <%= label_tag :username, "Username: ",class: "sr-only"%>
    <%= text_field_tag :username,"",class:"form-control", placeholder: 'Username' %>
    <%= label_tag :password, "Password: ",class: "sr-only"%>
    <%= password_field_tag :password,"",class:"form-control", placeholder: 'Password' %>
    <%= submit_tag  "Log In", class:"btn btn-lg btn-primary btn-block" %>
<%end%>
