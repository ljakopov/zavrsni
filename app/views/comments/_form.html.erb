<%=  form_for [@post, Comment.new],class:"form-inline", role:"form", remote: true  do |f| %>
    <div class="form-group">
      <%= f.text_area :body,  class:"form-control", id:"com_content#{@post.id}"  %>
      </div>
    <div class="form-group">
      <%= f.submit class:"btn btn-default" %>
      </div>
<% end %>