<div class="actionBox" id="comment">
  <ul class="commentList">
    <li>
      <div class="commenterImage" >
        <%= image_for(comment.user) %>
      </div>
      <div>
        <p><%= link_to comment.user.username, user_path(comment.user)  %>&nbsp;&nbsp;</p>
      </div>
      <div class="commentText">
        <p class=""><p style="float: left;"></p><%= comment.body%></p><span class="date sub-text"><%= time_ago_in_words(comment.created_at)  %></span>
      </div>
    </li>
    </ul>
  </div>
