<%=  form_for :group, url:user_groups_path(@user) do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, class:"form-control" %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, class:"form-control" %>
    </p>
    <br>
    <p>
      <%= f.submit class:"btn btn-default" %>
    </p>
<% end %>