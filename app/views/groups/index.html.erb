<h1>All Groups</h1>
<div class="all_users">
  <%= pluralize(@groups.size, 'group') %> found
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
    <% @groups.each do |group| %>
        <td><%= link_to group.title, user_group_path(@current_user,group) %> </td>
        <td><%= group.description %> </td>
    <%end%>
  </table>
</div>