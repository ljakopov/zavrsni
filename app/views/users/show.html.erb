<div id="container1">
  <div id="center" class="center1"> <%= image_for(@user,size:150) %>
    <%= if @variable==false
          link_to "Follow", friendships_path(:friend_id => @user), :method => :post, class:"btn btn-danger btn-lg"
        else
          if session[:user_id]!=@user.id
            link_to "Unfollow",friendship_path(:user_id=>@user) ,  :method => :delete,  class:"btn btn-danger btn-lg"
          end
        end
    %></div>
  <div id="center">  <h1><%= @user.username%></h1></div>
  <div id="center"> <h3><%= pluralize(@posts.size,'post') + " "  + pluralize(@user.friends.size,'following')+" " + pluralize(@followers,'followers') %></h3></div>
</div>
<% if @variable==true %>
    <div class="row">
      <% @posts.each do |post| %>
          <div class="col-xs-6 col-md-4">
            <a href="<%=user_post_path(@user,post.id)%>" class="thumbnail">
              <%=image_tag post.image.url(:thumb), size: "315x320"%>
            </a>
          </div>
      <% end %>
    </div>
<% end %>
