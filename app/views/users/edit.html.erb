<%= form_for :user, url:user_path(@user), :method=>'patch' do |f| %>
    <p>
      <%= f.label :first_name, "Ime: "  %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name, "Prezime: "  %>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :image, "Slika: " %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit "Save Change"%>
    </p>

<%end%>
