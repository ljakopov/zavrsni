<h1>New User</h1>
<div class="new user">
<%= form_for :user, url: users_path  do |f|%>
    <p>
      <%= f.label :first_name, "Ime: "  %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name, "Prezime: "  %>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :image, "Slika: " %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
  </div>

