<h1>New User</h1>
<div class="new user">
  <%= form_for :user, url: users_path  do |f|%>
      <p>
        <%= f.label :first_name, "First name: " , class:"control-label" %>
        <%= f.text_field :first_name, class:"form-control", placeholder:"First name: " %>
      </p>
      <p>
        <%= f.label :last_name, "Last name: ", class:"control-label"  %>
        <%= f.text_field :last_name, class:"form-control", placeholder:"Last name: " %>
      </p>
      <p>
        <%= f.label :username, "Username: ",class:"control-label" %>
        <%= f.text_field :username, class:"form-control", placeholder:"Username: " %>
      </p>
      <p>
        <%= f.label :password, "Password: ", class:"control-label" %>
        <%= f.text_field :password, class:"form-control", placeholder:"Password: " %>
      </p>
      <p>
        <%= f.label :image, "Slika: " %>
        <%= f.file_field :image %>
      </p>
      <p>
        <%= f.submit class:"btn btn-primary btn-lg active" %>
      </p>
  <% end %>
</div>
