
<%= link_to "All Users ", users_path, :class=>'action show' if session[:admin]==true %><br>

<% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-7 col-md-7">
        <div class="thumbnail">
          <%=link_to image_for(post.user, size:35) + post.user.username, user_path(post.user_id) %>
          <img src="<%= post.image.url(:big)%>"  size= "800x800" alt="<%= post.image.url(:thumb)  %>">
          <div class="caption">
            <div class="caption" style="text-align: center;">
              <%= link_to like_post_path(post), class:"like", method: :put do  %>
                  <button type="button" class="btn btn-info" aria-label="Left Align">
                    <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= post.get_upvotes.size %></span>
                  </button>
              <%end%>
              </div>
              <p>
            <div id="comments">
              <h2><%= post.comments.count %> Comments</h2>
              <%= render post.comments %>
              <h3>Add a comment</h3>
              <%=  form_for [post, Comment.new] do |f| %>
                <p>
                  <%= f.label :body  %><br>
                  <%= f.text_area :body %>
                </p>
                <br>
                <p>
                  <%= f.submit class:"btn btn-primary", role:"button"%>
                </p>
            <% end %>
            </div>
              </p>
          </div>
        </div>
      </div>
    </div>
<% end %>
